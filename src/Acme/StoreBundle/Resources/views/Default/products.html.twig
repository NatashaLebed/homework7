{% extends "AcmeStoreBundle::layout.html.twig" %}

{% block title "Products " %}

    {% block content %}

        <div id="wrap">
            <div class="container">
                <div class="alert alert-success">
                    <h1>Products</h1>
                </div>
           </div>
        </div>

            <div class="container">

                <div class="row row-offcanvas row-offcanvas-right">

                    <div class="col-xs-12 col-sm-9">
                        <p class="pull-right visible-xs">
                            <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
                        </p>

                        <div class="row">

                            {% for product in products %}

                            <div class="col-6 col-sm-6 col-lg-4">
                                <h2>{{ product.name }}</h2>
                                <p><h5><b>Category:</b> {{ product.category.name }}</h5></p>
                                <p><a class="btn btn-success" href="{{ path('acme_store_product_description',
                                    {'id': product.id}) }}" role="button">View details &raquo;</a></p>
                            </div><!--/span-->

                            {% endfor %}

                        </div><!--/row-->
                    </div><!--/span-->


                </div><!--/row-->

            </div><!--/.container-->




    {% endblock %}
